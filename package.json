{
  "name": "anna",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "start": "bun run scripts/start.ts",
    "dev": "bun run scripts/dev.ts",
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "bun run --filter '*' typecheck",
    "db:migrate": "bun run --filter @repo/db migrate",
    "db:seed": "bun run --filter @repo/db seed",
    "db:studio": "bun run --filter @repo/db studio",
    "docker:start": "bun run scripts/docker-start.ts",
    "docker:stop": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "new-project": "bun run scripts/new-project.ts",
    "health-check": "bun run scripts/health-check.ts",
    "verify-clerk": "bun run scripts/verify-clerk.ts",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@happy-dom/global-registrator": "^20.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/bun": "^1.3.5",
    "happy-dom": "^20.1.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "tw-animate-css": "^1.4.0"
  }
}
