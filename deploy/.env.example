# =============================================================================
# Anna - Environment Variables for Docker Deployment
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=anna
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
POSTGRES_DB=anna

# -----------------------------------------------------------------------------
# Authentication (Clerk)
# -----------------------------------------------------------------------------
# Required: Get from https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...
CLERK_WEBHOOK_SECRET=whsec_...

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_...

# -----------------------------------------------------------------------------
# AI / LLM (OpenRouter)
# -----------------------------------------------------------------------------
OPENROUTER_API_KEY=sk-or-...
OPENROUTER_DEFAULT_MODEL=deepseek/deepseek-v3.2

# -----------------------------------------------------------------------------
# URLs
# -----------------------------------------------------------------------------
# The public URL where Anna will be accessible
WEB_URL=https://anna.yourcompany.com
API_URL=https://anna.yourcompany.com/api

# Port exposed on the host (default: 80)
APP_PORT=80

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
SENTRY_DSN=
